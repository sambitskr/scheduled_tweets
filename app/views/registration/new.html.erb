<h1>Sign up</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>
    <div class = "mt-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <%= form.text_field :email, class: "form-control", placeholder: "example@email.com" %>
    </div>

    <div class = "mt-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class = "mt-3">
        <label for="exampleInputPassword1" class="form-label">Password Confirmation</label>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Retype password" %>
    </div>

    <div class = "mt-3">
        <%= form.submit "Get started", class: "btn btn-primary" %>
    </div>
<% end %>