<h1>Reset password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
    <% if form.object.errors.any? %>
        <div class= "alert alert-danger">
            <%= form.object.errors.full_messages.each do  |message|%>
                <div> <%= message %> </div>
            <% end %> 
        </div>
    <% end %>

    <div class = "mt-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class = "mt-3">
        <label for="exampleInputPassword1" class="form-label">Password Confirmation</label>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Retype password" %>
    </div>

    <div class = "mt-3">
        <%= form.submit "Reset Password", class: "btn btn-primary" %>
    </div>

<% end %>